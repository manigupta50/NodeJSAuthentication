<!-- HTML/CSS for SignIn page -->

<div class="form login">
    <div class="form-content">
        <header>Login</header>
        <form action="/api/users/signin" method="post">
            <% if(!success) { %>
                <div style="color: red;">
                    <%= msg %>
                </div>
            <% } %>
            <div class="field input-field">
                <input type="email" placeholder="Email" class="input" name="email" required>
            </div>
            <div class="field input-field">
                <input type="password" placeholder="Password" class="password" name="password" required>
                <i class='bx bx-hide eye-icon'></i>
            </div>
            <div class="form-link">
                <a href="/api/users/forgot-password" class="forgot-pass">Forgot password?</a>
            </div>
            <div class="field button-field">
                <button>Login</button>
            </div>
        </form>
        <div class="form-link">
            <span>Don't have an account? <a href="/api/users/signup" class="link signup-link">Signup</a></span>
        </div>
    </div>

    <div class="line"></div>

    <div class="media-options">
        <a href="/auth/google" class="field google">
            <i class="fab fa-google google-img"></i>
            <span>Login with Google</span>
        </a>
    </div>
</div>